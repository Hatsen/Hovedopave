<h2>Forældrelogin</h2>

<div class="row">
    <div  >
        <section id="loginForm">
            <div class="form-group">
                @using (Html.BeginForm("GetLoginDetails", "Account"))
                {
                <p>Brugernavn:</p>@Html.TextBox("username");
                <p>Kodeord:</p>@Html.Password("password");
                <br />
                <br />
                <input type="submit" value="Log ind" id="submit" class="btn btn-default" />
                <br />
                }
            </div>
        </section>
    </div>
</div>