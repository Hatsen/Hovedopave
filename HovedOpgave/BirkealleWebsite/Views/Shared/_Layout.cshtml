<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Birkeallé Skolen</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: green">
        <div class="container" style="background-color: green; text-align: center">
            <div class="navbar-header" style="background-color: green; text-align: center;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color: green">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" style="background-color: green; text-align:center">
                <ul class="nav navbar-nav">
                    <li style="text-align:center;">@Html.ActionLink("Hjem", "Index", "Navigation")</li>
                    <li style="text-align: center">@Html.ActionLink("Om skolen", "GotoAboutSchool", "Navigation")</li>
                    <li style="text-align: center">@Html.ActionLink("Kontakt os", "GotoContact", "Navigation")</li>
                    <li style="text-align: center">@Html.ActionLink("Skolegalleri", "GotoGallery", "Navigation")</li>
                    <li style="text-align: center">@Html.ActionLink("Skoleindmeldelse", "GotoEnrollment", "Navigation")</li>
                    <li style="text-align: center">@Html.ActionLink("Login", "GotoLogin", "Navigation")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="text-align:center">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Birkeallé</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>
