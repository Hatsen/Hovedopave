@model IEnumerable<BirkealleWebsite.WebService.ClassEx>

@{
    ViewBag.Title = "Klasseliste";
}

<h2>Klasser dine børn er tilknyttet til:</h2>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <li>@Html.ActionLink(item.Name, "DisplaySpecifiedClass", "class", new { id = item.Id }, null)</li>
    }
}
else
{
    <b>Det ser ikke ud til at dine børn er tilknyttet en klasse. Hvis dette er en fejl, bedes du kontakte <a href="mailto:skoleleder@birkealle.dk">skolelederen</a>.</b>
}

