<Window x:Class="AdminModule.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
           Title="MainWindowView" Height="544.59" Width="978.292">

    <toolkit:BusyIndicator IsBusy="{Binding Isloading}" BusyContent="Vent venligst..." >
        <Grid Background="CadetBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_Underviser">
                <MenuItem Command="{Binding CreateTeacherCommand}" Header="Opret Underviser" InputGestureText="Ctrl-X" />
            </MenuItem>
            <MenuItem Header="_Elev">
                <MenuItem Command="{Binding CreateStudentCommand}" Header="Opret Elev" InputGestureText="Ctrl-X" />
            </MenuItem>
            <MenuItem Header="_Forældre">
                <MenuItem Command="{Binding CreateParentCommand}" Header="Opret Forældre" InputGestureText="Ctrl-X" />
                <MenuItem Command="{Binding }" Header="Se tilknyttede børn" InputGestureText="Ctrl-X" />
            </MenuItem>
        </Menu>


        <Grid Row="1">
            <Button Content="Søg" HorizontalAlignment="Left" Margin="598,70,0,0" VerticalAlignment="Top" Width="75" Height="25" Command="{Binding UpdateCommand}" Click="Button_Click"/>
                <DataGrid Name="datagridTeacheren" HorizontalAlignment="Left" VerticalAlignment="Top" Height="292" Width="542" Margin="131,97,0,0" ItemsSource="{Binding TeacherList, Mode=TwoWay}"  AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="Id"/>
                    <DataGridTextColumn Binding="{Binding Firstname}" Header="Fornavn" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Lastname}" Header="Efternavn" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding City}" Header="By" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Address}" Header="Adresse" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Username}" Header="Username" IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding Lastlogin}" Header="Lastlogin"/>
                    <DataGridTextColumn Binding="{Binding Userrole}" Header="Userrole" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

                <!--<DataGrid Name="datagridStudent" HorizontalAlignment="Left" VerticalAlignment="Top" Height="292" Width="542" Margin="131,97,0,0" ItemsSource="{Binding TeacherListen, Mode=TwoWay}" AutoGenerateColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fornavn" Binding="{Binding Firstname}" IsReadOnly="True" SortMemberPath="Ignore"/>
                    <DataGridTextColumn Header="Efternavn" Binding="{Binding Lastname}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Adresse" Binding="{Binding Address}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Username" Binding="{Binding UpdatedByUserName}" IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>-->

            
            <ComboBox Name="combo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="293" Height="25" Margin="131,70,0,0" ItemsSource="{Binding TeacherListen, Mode=TwoWay}" SelectedItem="{Binding Path=SelectedPerson, Mode=TwoWay}" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox HorizontalAlignment="Left" Height="25" Margin="429,70,0,0" TextWrapping="Wrap" Text="Søg..."  VerticalAlignment="Top" Width="164"/>
            <Button Content="Rediger Person" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Width="105" Height="25" Command="{Binding EditUserCommand}"/>
            <Button Content="Opret Underviser" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="105" Height="25" Command="{Binding CreateTeacherCommand}"/>
            <Button Content="Opret Elev" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="105" Height="25" Command="{Binding CreateStudentCommand}"/>
            <Button Content="Opret Forældre" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Width="105" Height="25" Command="{Binding CreateParentCommand}"/>
            <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Height="292" Width="191" Margin="747,97,0,0"/>
            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Height="25" Margin="747,70,0,0" ItemsSource="{Binding TeacherListen, Mode=TwoWay}" SelectedItem="{Binding SelectedProject, Mode=TwoWay}"/>
            <TextBox HorizontalAlignment="Left" Height="25" Margin="853,70,0,0" TextWrapping="Wrap" Text="Søg..."  VerticalAlignment="Top" Width="85"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="131,449,0,-61" VerticalAlignment="Top" Width="75" Command="{Binding UpdateStudentsCommand}" Height="24" Click="Button_Click_1" />
        </Grid>
            <Button Content="Button" HorizontalAlignment="Left" Margin="132,422,0,-31" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
            



        </Grid>
        </toolkit:BusyIndicator>
</Window>
